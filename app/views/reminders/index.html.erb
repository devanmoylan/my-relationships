<table class="table table-hover">
  <tbody>
  <% @events.each do |event| %>
    <tr class="<%= row_color(event.reminder_datetime) %>">
      <td>
        <a data-toggle="collapse" href="#event-<%= event.id %>" role="button" aria-expanded="false" aria-controls="collapseExample">
          <%= fa_icon "info-circle", alt: "More context" %>
        </a>
        <div class="collapse" id="event-<%= event.id %>">
          <div class="card card-body">
            <%= render 'events/form', event: event %>
          </div>
        </div>
      </td>
      <td><%= event.reminder_note %><br><%= distance_of_time_in_words_to_now_helper(event.reminder_datetime) %></td>
      <td><%= event.reminder_datetime.strftime("%B") %></td>
      <td><%= event.reminder_datetime.strftime("%d") %></td>
      <td><%= event.reminder_datetime.strftime("%Y") %></td>
      <td><%= event.reminder_datetime.strftime("%l") %>:<%= event.reminder_datetime.strftime("%M") %><%= event.reminder_datetime.strftime("%P") %></td>
    </tr>
  <% end %>
  </tbody>
</table>
